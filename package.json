{
  "name": "highlighter",
  "displayName": "highlighter",
  "publisher": "MarkiGames",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "highlighter.deactivate",
        "title": "Deactivate Method Color Coder"
      },{
        "command": "highlighter.reactivate",
        "title": "Reactivates Method Color Coder after deactivision"
      }
    ],
    "configuration": {
      "title": "Method Color Coder",
      "properties": {
        "MethodColorCoder.overlayOpacity": {
          "type": "number",
          "default": 0.1,
          "description": "The opactiy of the effect"
        },
        "MethodColorCoder.RandomColorIntensity": {
          "type": "number",
          "default": 1.0,
          "description": "Increase or decrease for more or less color intensity"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }


}
